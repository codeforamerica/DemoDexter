h1 Streets

if streets.length
    p Here are some existing streets:
    ul.streets
        for street in streets
            li.street
                a(href='/streets/#{street.id}') #{street.name}
else
    p There are no streets currently.

form(action='', method='POST')
    p Create a new street:
    input(type='text', name='name', placeholder='Name', required)
    input(type='submit', value='Create')
